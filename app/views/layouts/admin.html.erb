<!DOCTYPE html>
<html>
<head>
  <title>SchoolApp</title>
 <%= stylesheet_link_tag %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
   <%= javascript_include_tag "tiny_mce/tiny_mce" %>
  

	<script type="text/javascript">

     tinyMCE.init({  theme:"advanced",
					mode:"textareas",
    				editor_selector : "tiny_mce"
    				
    			});
   </script>
</head>
<body>
	<%= yield %>
<ul>
<li><% if controller.controller_name == 'pages' %>
	 <%= link_to "Pages", admin_pages_path, :class=>"active" %>
	  <% else %> 
	  <%= link_to "Pages", admin_pages_path %> 
	  <% end %></li>

  <li>
  	<% if controller.controller_name == 'contacts' %> 
  	<%= link_to "contacts", admin_contacts_path, :class=>"active" %> 
  	<% else %> 
  	<%= link_to "Contacts", admin_contacts_path %> 
  	<% end %>
  </li>
 	<% if admin_signed_in? %> 
	<%= link_to "Sign out", destroy_admin_session_path %> 
	<% else %> 
	<%= link_to "sign in", new_admin_session_path %> &nbsp; 
	<% end %>
  </li>	
</ul>
</body>
</html>
